submodule nokia-conf-system-script-control {

    yang-version "1.1";

    belongs-to nokia-conf { prefix "conf"; }

    import nokia-sros-yang-extensions     { prefix "sros-ext"; }
    import nokia-types-sros               { prefix "types-sros"; }

    include nokia-conf-groups;
    include nokia-conf-python;

    sros-ext:sros-major-release "rel23";
    organization "Nokia";
    contact
        "Nokia SR OS Support
         Web: <http://www.nokia.com>";
    description
        "Nokia YANG Data model to configure system scrip-control parameters on SR OS based routers.

         Copyright 2016 Nokia. All rights reserved. Reproduction of this document
         is authorized on the condition that the foregoing copyright notice is included.

         This nokia-conf-system-script-control YANG module embodies Nokia's proprietary
         intellectual property. Nokia retains all title and ownership in the
         specification, including any revisions.

         Nokia grants all interested parties a non-exclusive license to use
         and distribute an unmodified copy of this specification in connection with
         management of Nokia products, and without fee, provided this
         copyright notice and license appear on all copies.

         This specification is supplied `as is', and Nokia makes no warranty,
         either express or implied, as to the use, operation, condition, or performance
         of the specification.";
    revision "2021-10-04";

    grouping conf-system-script-control {
        ///nokia-conf/configure/system/script-control
        container script-control {
            description "Enable the script-control context";

            ///nokia-conf/configure/system/script-control/apply-groups
            leaf-list apply-groups {
                type leafref {
                    path "../../../groups/group/name";
                }
                max-elements 8;
                ordered-by user;
                description "Apply a configuration group at this level";
            }

            ///nokia-conf/configure/system/script-control/apply-groups-exclude
            leaf-list apply-groups-exclude {
                type leafref {
                    path "../../../groups/group/name";
                }
                max-elements 8;
                ordered-by user;
                description "Exclude a configuration group at this level";
            }

            ///nokia-conf/configure/system/script-control/script
            list script {
                key "script-name owner";
                max-elements 1500;
                description "Enter the script list instance";

                ///nokia-conf/configure/system/script-control/script/script-name
                leaf script-name {
                    type types-sros:named-item;
                    description "Script name";
                }

                ///nokia-conf/configure/system/script-control/script/owner
                leaf owner {
                    type types-sros:named-item;
                    description "Script owner";
                }

                ///nokia-conf/configure/system/script-control/script/admin-state
                leaf admin-state {
                    type types-sros:admin-state;
                    default "disable";
                    description "Administrative state of the script";
                }

                ///nokia-conf/configure/system/script-control/script/description
                leaf description {
                    type types-sros:description;
                    description "Text description";
                }

                ///nokia-conf/configure/system/script-control/script/location
                leaf location {
                    type types-sros:string-not-all-spaces {
                        length "1..255";
                    }
                    sros-ext:auto-restart-to-modify;
                    description "Script location";
                }

                ///nokia-conf/configure/system/script-control/script/apply-groups
                leaf-list apply-groups {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Apply a configuration group at this level";
                }

                ///nokia-conf/configure/system/script-control/script/apply-groups-exclude
                leaf-list apply-groups-exclude {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Exclude a configuration group at this level";
                }

            } // list script

            ///nokia-conf/configure/system/script-control/script-policy
            list script-policy {
                key "policy-name owner";
                max-elements 1500;
                description "Enter the script-policy list instance";

                ///nokia-conf/configure/system/script-control/script-policy/policy-name
                leaf policy-name {
                    type types-sros:named-item;
                    description "Script policy name";
                }

                ///nokia-conf/configure/system/script-control/script-policy/owner
                leaf owner {
                    type types-sros:named-item;
                    description "Script policy owner";
                }

                ///nokia-conf/configure/system/script-control/script-policy/admin-state
                leaf admin-state {
                    type types-sros:admin-state;
                    default "disable";
                    description "Administrative state of the script policy";
                }

                ///nokia-conf/configure/system/script-control/script-policy/expire-time
                leaf expire-time {
                    type union {
                        type uint32 {
                            range "0..21474836";
                        }
                        type enumeration {
                            enum forever                        { value 2147483647; }
                        }
                    }
                    units "seconds";
                    default "3600";
                    description "Maximum amount of time to keep a run history status";
                }

                ///nokia-conf/configure/system/script-control/script-policy/max-completed
                leaf max-completed {
                    type uint32 {
                        range "1..1500";
                    }
                    default "1";
                    description "Maximum number of script history status entries kept";
                }

                ///nokia-conf/configure/system/script-control/script-policy/results
                leaf results {
                    type types-sros:string-not-all-spaces {
                        length "1..255";
                    }
                    description "Location to receive CLI output of a script run";
                }

                ///nokia-conf/configure/system/script-control/script-policy/lock-override
                leaf lock-override {
                    type boolean;
                    default "false";
                    description "Allow EHS/CRON script to break database explicit lock";
                }

                ///nokia-conf/configure/system/script-control/script-policy/apply-groups
                leaf-list apply-groups {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Apply a configuration group at this level";
                }

                ///nokia-conf/configure/system/script-control/script-policy/apply-groups-exclude
                leaf-list apply-groups-exclude {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Exclude a configuration group at this level";
                }

                ///nokia-conf/configure/system/script-control/script-policy/script-type
                choice script-type {
                    ///nokia-conf/configure/system/script-control/script-policy/script-type/scriptcontrol
                    case scriptcontrol {

                        ///nokia-conf/configure/system/script-control/script-policy/script-type/scriptcontrol/lifetime
                        leaf lifetime {
                            type union {
                                type uint32 {
                                    range "0..21474836";
                                }
                                type enumeration {
                                    enum forever                        { value 2147483647; }
                                }
                            }
                            units "seconds";
                            default "3600";
                            description "Maximum amount of time the script may run";
                        }

                        ///nokia-conf/configure/system/script-control/script-policy/script-type/scriptcontrol/script
                        container script {
                            description "Enter the script context";

                            ///nokia-conf/configure/system/script-control/script-policy/script-type/scriptcontrol/script/name
                            leaf name {
                                type types-sros:named-item;
                                sros-ext:auto-restart-to-modify;
                                description "Script name";
                            }

                            ///nokia-conf/configure/system/script-control/script-policy/script-type/scriptcontrol/script/owner
                            leaf owner {
                                type types-sros:named-item;
                                sros-ext:auto-restart-to-modify;
                                description "Script owner";
                            }

                        } // container script

                    }
                    ///nokia-conf/configure/system/script-control/script-policy/script-type/python3script
                    case python3script {

                        ///nokia-conf/configure/system/script-control/script-policy/script-type/python3script/python-lifetime
                        leaf python-lifetime {
                            type uint32 {
                                range "30..86400";
                            }
                            units "seconds";
                            description "Maximum time the Python application can run";
                        }

                        ///nokia-conf/configure/system/script-control/script-policy/script-type/python3script/python-script
                        container python-script {
                            description "Enter the python-script context";

                            ///nokia-conf/configure/system/script-control/script-policy/script-type/python3script/python-script/name
                            leaf name {
                                type leafref {
                                    path "../../../../../python/python-script/name";
                                }
                                sros-ext:auto-restart-to-modify;
                                description "Python application name";
                            }

                        } // container python-script

                    }
                }
            } // list script-policy

        } // container script-control

    } // grouping conf-system-script-control

}
