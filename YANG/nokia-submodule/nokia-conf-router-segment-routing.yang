submodule nokia-conf-router-segment-routing {

    yang-version "1.1";

    belongs-to nokia-conf { prefix "conf"; }

    import nokia-sros-yang-extensions     { prefix "sros-ext"; }
    import nokia-types-sr-mpls            { prefix "types-sr-mpls"; }
    import nokia-types-sros               { prefix "types-sros"; }

    include nokia-conf-bfd;
    include nokia-conf-groups;
    include nokia-conf-log;
    include nokia-conf-pxc;
    include nokia-conf-router;

    sros-ext:sros-major-release "rel23";
    organization "Nokia";
    contact
        "Nokia SR OS Support
         Web: <http://www.nokia.com>";
    description
        "Nokia YANG Data model to configure segment routing management on SR OS based routers.

         Copyright 2016 Nokia. All rights reserved. Reproduction of this document
         is authorized on the condition that the foregoing copyright notice is included.

         This nokia-conf-router-segment-routing YANG module embodies Nokia's proprietary
         intellectual property. Nokia retains all title and ownership in the
         specification, including any revisions.

         Nokia grants all interested parties a non-exclusive license to use
         and distribute an unmodified copy of this specification in connection with
         management of Nokia products, and without fee, provided this
         copyright notice and license appear on all copies.

         This specification is supplied `as is', and Nokia makes no warranty,
         either express or implied, as to the use, operation, condition, or performance
         of the specification.";
    revision "2023-06-02";

    grouping conf-router-segment-routing {
        ///nokia-conf/configure/router/segment-routing
        container segment-routing {
            when "../router-name = 'Base'" {
                description "only allowed in the Base router";
            }
            description "Enable the segment-routing context";

            ///nokia-conf/configure/router/segment-routing/apply-groups
            leaf-list apply-groups {
                type leafref {
                    path "../../../groups/group/name";
                }
                max-elements 8;
                ordered-by user;
                description "Apply a configuration group at this level";
            }

            ///nokia-conf/configure/router/segment-routing/apply-groups-exclude
            leaf-list apply-groups-exclude {
                type leafref {
                    path "../../../groups/group/name";
                }
                max-elements 8;
                ordered-by user;
                description "Exclude a configuration group at this level";
            }

            ///nokia-conf/configure/router/segment-routing/maintenance-policy
            list maintenance-policy {
                key "policy-name";
                description "Enter the maintenance-policy list instance";

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/policy-name
                leaf policy-name {
                    type types-sros:named-item;
                    description "Maintenance policy name";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/admin-state
                leaf admin-state {
                    type types-sros:admin-state;
                    default "disable";
                    description "Administrative state of the maintenance policy";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/bfd-liveness
                leaf bfd-liveness {
                    type boolean;
                    sros-ext:auto-restart-to-modify;
                    default "false";
                    description "Enable seamless BFD for segment lists of candidate path";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/bfd-template
                leaf bfd-template {
                    type leafref {
                        path "../../../../bfd/bfd-template/name";
                    }
                    sros-ext:auto-restart-to-modify;
                    description "BFD template to be used by seamless BFD";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/mode
                leaf mode {
                    type enumeration {
                        enum none                           { value 0; }
                        enum ecmp-protected                 { value 1; }
                        enum linear                         { value 2; }
                    }
                    sros-ext:auto-restart-to-modify;
                    default "none";
                    description "Protection mode for SR policy candidate paths";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/threshold
                leaf threshold {
                    type uint32 {
                        range "1..32";
                    }
                    sros-ext:auto-restart-to-modify;
                    default "1";
                    description "Minimum number of up S-BFD sessions for up path status";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/hold-down-timer
                leaf hold-down-timer {
                    type uint32 {
                        range "0..5000";
                    }
                    units "deciseconds";
                    sros-ext:auto-restart-to-modify;
                    default "0";
                    description "Hold down timer for SR policy candidate paths";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/revert-timer
                leaf revert-timer {
                    type uint32 {
                        range "0..4320";
                    }
                    units "minutes";
                    description "Revert timer for SR policy candidate paths";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/return-path-label
                leaf return-path-label {
                    type uint32 {
                        range "32..1048512";
                    }
                    sros-ext:auto-restart-to-modify;
                    description "S-BFD return-path label";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/apply-groups
                leaf-list apply-groups {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Apply a configuration group at this level";
                }

                ///nokia-conf/configure/router/segment-routing/maintenance-policy/apply-groups-exclude
                leaf-list apply-groups-exclude {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Exclude a configuration group at this level";
                }

            } // list maintenance-policy

            ///nokia-conf/configure/router/segment-routing/sr-mpls
            container sr-mpls {
                description "Enable the sr-mpls context";

                ///nokia-conf/configure/router/segment-routing/sr-mpls/apply-groups
                leaf-list apply-groups {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Apply a configuration group at this level";
                }

                ///nokia-conf/configure/router/segment-routing/sr-mpls/apply-groups-exclude
                leaf-list apply-groups-exclude {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Exclude a configuration group at this level";
                }

                ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids
                list prefix-sids {
                    key "interface-name";
                    description "Enter the prefix-sids list instance";

                    ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/interface-name
                    leaf interface-name {
                        type leafref {
                            path "../../../../interface/interface-name";
                        }
                        description "Loopback interface name that owns prefix to advertise";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/node-sid
                    leaf node-sid {
                        type boolean;
                        default "true";
                        description "Assign a node SID to the prefix referencing the router";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/apply-groups
                    leaf-list apply-groups {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Apply a configuration group at this level";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/apply-groups-exclude
                    leaf-list apply-groups-exclude {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Exclude a configuration group at this level";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv4-sid
                    container ipv4-sid {
                        presence "Enable the ipv4-sid context";
                        description "Enable the ipv4-sid context";

                        ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv4-sid/type
                        choice type {
                            ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv4-sid/type/label
                            case label {

                                ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv4-sid/type/label/label
                                leaf label {
                                    type int64 {
                                        range "32..1048575";
                                    }
                                    description "Label value for the node SID";
                                }

                            }
                            ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv4-sid/type/index
                            case index {

                                ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv4-sid/type/index/index
                                leaf index {
                                    type int64 {
                                        range "0..4294967295";
                                    }
                                    description "Node SID index for the interface";
                                }

                            }
                        }
                    } // container ipv4-sid

                    ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv6-sid
                    container ipv6-sid {
                        presence "Enable the ipv6-sid context";
                        description "Enable the ipv6-sid context";

                        ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv6-sid/type
                        choice type {
                            ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv6-sid/type/label
                            case label {

                                ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv6-sid/type/label/label
                                leaf label {
                                    type int64 {
                                        range "32..1048575";
                                    }
                                    description "Label value for the node SID";
                                }

                            }
                            ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv6-sid/type/index
                            case index {

                                ///nokia-conf/configure/router/segment-routing/sr-mpls/prefix-sids/ipv6-sid/type/index/index
                                leaf index {
                                    type int64 {
                                        range "0..4294967295";
                                    }
                                    description "Node SID index for the interface";
                                }

                            }
                        }
                    } // container ipv6-sid

                } // list prefix-sids

            } // container sr-mpls

            ///nokia-conf/configure/router/segment-routing/sr-policies
            container sr-policies {
                description "Enter the sr-policies context";

                ///nokia-conf/configure/router/segment-routing/sr-policies/admin-state
                leaf admin-state {
                    type types-sros:admin-state;
                    default "disable";
                    description "Administrative state of segment routing policies";
                }

                ///nokia-conf/configure/router/segment-routing/sr-policies/reserved-label-block
                leaf reserved-label-block {
                    type leafref {
                        path "../../../mpls-labels/reserved-label-block/label-block-name";
                    }
                    sros-ext:auto-restart-to-modify;
                    description "Reserved local block for segment routing policies";
                }

                ///nokia-conf/configure/router/segment-routing/sr-policies/apply-groups
                leaf-list apply-groups {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Apply a configuration group at this level";
                }

                ///nokia-conf/configure/router/segment-routing/sr-policies/apply-groups-exclude
                leaf-list apply-groups-exclude {
                    type leafref {
                        path "../../../../groups/group/name";
                    }
                    max-elements 8;
                    ordered-by user;
                    description "Exclude a configuration group at this level";
                }

                ///nokia-conf/configure/router/segment-routing/sr-policies/ingress-statistics
                container ingress-statistics {
                    presence "Enable the ingress-statistics context";
                    description "Enable the ingress-statistics context";

                    ///nokia-conf/configure/router/segment-routing/sr-policies/ingress-statistics/admin-state
                    leaf admin-state {
                        type types-sros:admin-state;
                        default "disable";
                        description "Administrative state of the traffic statistics";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/ingress-statistics/apply-groups
                    leaf-list apply-groups {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Apply a configuration group at this level";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/ingress-statistics/apply-groups-exclude
                    leaf-list apply-groups-exclude {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Exclude a configuration group at this level";
                    }

                } // container ingress-statistics

                ///nokia-conf/configure/router/segment-routing/sr-policies/egress-statistics
                container egress-statistics {
                    presence "Enable the egress-statistics context";
                    description "Enable the egress-statistics context";

                    ///nokia-conf/configure/router/segment-routing/sr-policies/egress-statistics/admin-state
                    leaf admin-state {
                        type types-sros:admin-state;
                        default "disable";
                        description "Administrative state of the traffic statistics";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/egress-statistics/collect-stats
                    leaf collect-stats {
                        type boolean;
                        default "false";
                        description "Collect accounting and statistical data";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/egress-statistics/accounting-policy
                    leaf accounting-policy {
                        type leafref {
                            path "../../../../../log/accounting-policy/policy-id";
                        }
                        description "Accounting policy ID";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/egress-statistics/apply-groups
                    leaf-list apply-groups {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Apply a configuration group at this level";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/egress-statistics/apply-groups-exclude
                    leaf-list apply-groups-exclude {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Exclude a configuration group at this level";
                    }

                } // container egress-statistics

                ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy
                list static-policy {
                    key "name";
                    max-elements 8192;
                    description "Enter the static-policy list instance";

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/name
                    leaf name {
                        type types-sros:named-item-64;
                        description "Name for the segment routing static policy";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/admin-state
                    leaf admin-state {
                        type types-sros:admin-state;
                        default "disable";
                        description "Administrative state of segment routing static policy";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/color
                    leaf color {
                        type int64 {
                            range "0..4294967295";
                        }
                        sros-ext:auto-restart-to-modify;
                        description "Traffic flows to be steered by this policy";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/endpoint
                    leaf endpoint {
                        type types-sros:ip-address;
                        sros-ext:auto-restart-to-modify;
                        description "Destination of the source-routed path";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/preference
                    leaf preference {
                        type uint32;
                        sros-ext:auto-restart-to-modify;
                        default "100";
                        description "Preference value of this static policy";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/head-end
                    leaf head-end {
                        type union {
                            type types-sros:ip-address;
                            type enumeration {
                                enum local                          { value 1; }
                            }
                        }
                        sros-ext:auto-restart-to-modify;
                        description "Head end address for this static policy";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/binding-sid
                    leaf binding-sid {
                        type types-sros:mpls-label-or-zero;
                        description "Segment ID that opaquely represents an SR policy to upstream routers";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/distinguisher
                    leaf distinguisher {
                        type uint32 {
                            range "1..max";
                        }
                        sros-ext:auto-restart-to-modify;
                        description "Unique value for a policy";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/maintenance-policy
                    leaf maintenance-policy {
                        type leafref {
                            path "../../../maintenance-policy/policy-name";
                        }
                        sros-ext:auto-restart-to-modify;
                        description "Policy name";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/prefer-transport-frr
                    leaf prefer-transport-frr {
                        type boolean;
                        sros-ext:auto-restart-to-modify;
                        default "false";
                        description "Enable transport FRR preference";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/type
                    leaf type {
                        type enumeration {
                            enum sr-mpls                        { value 1; }
                            enum srv6                           { value 2; }
                        }
                        default "sr-mpls";
                        description "Static policy type";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/apply-groups
                    leaf-list apply-groups {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Apply a configuration group at this level";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/apply-groups-exclude
                    leaf-list apply-groups-exclude {
                        type leafref {
                            path "../../../../../groups/group/name";
                        }
                        max-elements 8;
                        ordered-by user;
                        description "Exclude a configuration group at this level";
                    }

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6
                    container segment-routing-v6 {
                        presence "Enable the segment-routing-v6 context";
                        sros-ext:auto-restart-to-modify;
                        description "Enable the segment-routing-v6 context";

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/return-path-bfd-sid
                        leaf return-path-bfd-sid {
                            type types-sros:ipv6-address;
                            description "BFD controlled return path for SRv6";
                        }

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid
                        list binding-sid {
                            key "index";
                            max-elements 1;
                            description "Enter the binding-sid list instance";

                            ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/index
                            leaf index {
                                type uint32 {
                                    range "1";
                                }
                                description "Binding SID index";
                            }

                            ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/apply-groups
                            leaf-list apply-groups {
                                type leafref {
                                    path "../../../../../../../groups/group/name";
                                }
                                max-elements 8;
                                ordered-by user;
                                description "Apply a configuration group at this level";
                            }

                            ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/apply-groups-exclude
                            leaf-list apply-groups-exclude {
                                type leafref {
                                    path "../../../../../../../groups/group/name";
                                }
                                max-elements 8;
                                ordered-by user;
                                description "Exclude a configuration group at this level";
                            }

                            ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type
                            choice binding-sid-type {
                                ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type/remote-binding-sid
                                case remote-binding-sid {

                                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type/remote-binding-sid/ip-address
                                    leaf ip-address {
                                        type types-sros:ipv6-address;
                                        description "Remote SRv6 binding SID";
                                    }

                                }
                                ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type/local-binding-sid
                                case local-binding-sid {

                                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type/local-binding-sid/locator
                                    container locator {
                                        presence "Enable the locator context";
                                        description "Enable the locator context";

                                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type/local-binding-sid/locator/locator-name
                                        leaf locator-name {
                                            type leafref {
                                                path "../../../../../../../../router/segment-routing/segment-routing-v6/locator/locator-name";
                                            }
                                            mandatory true;
                                            description "Local SRv6 binding SID locator name";
                                        }

                                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type/local-binding-sid/locator/function
                                        leaf function {
                                            type enumeration {
                                                enum end-b6-encaps-red              { value 1; }
                                            }
                                            mandatory true;
                                            description "Local SRv6 binding SID locator function";
                                        }

                                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-routing-v6/binding-sid/binding-sid-type/local-binding-sid/locator/function-value
                                        leaf function-value {
                                            type uint32 {
                                                range "1..1048575";
                                            }
                                            description "Local SRv6 binding SID locator function value";
                                        }

                                    } // container locator

                                }
                            }
                        } // list binding-sid

                    } // container segment-routing-v6

                    ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list
                    list segment-list {
                        key "seg-list-index";
                        max-elements 32;
                        description "Enter the segment-list list instance";

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/seg-list-index
                        leaf seg-list-index {
                            type uint32 {
                                range "1..32";
                            }
                            description "Index for identifying a particular segment list";
                        }

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/admin-state
                        leaf admin-state {
                            type types-sros:admin-state;
                            default "disable";
                            description "Administrative state of segment list for static policy";
                        }

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/weight
                        leaf weight {
                            type uint32;
                            sros-ext:auto-restart-to-modify;
                            default "1";
                            description "Weight of this segment list";
                        }

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/apply-groups
                        leaf-list apply-groups {
                            type leafref {
                                path "../../../../../../groups/group/name";
                            }
                            max-elements 8;
                            ordered-by user;
                            sros-ext:auto-restart-to-modify;
                            description "Apply a configuration group at this level";
                        }

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/apply-groups-exclude
                        leaf-list apply-groups-exclude {
                            type leafref {
                                path "../../../../../../groups/group/name";
                            }
                            max-elements 8;
                            ordered-by user;
                            sros-ext:auto-restart-to-modify;
                            description "Exclude a configuration group at this level";
                        }

                        ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/segment
                        list segment {
                            key "segment-index";
                            max-elements 11;
                            description "Enter the segment list instance";

                            ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/segment/segment-index
                            leaf segment-index {
                                type uint32 {
                                    range "1..11";
                                }
                                description "Index for identifying a particular segment list";
                            }

                            ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/segment/mpls-label
                            leaf mpls-label {
                                type uint32 {
                                    range "0..1048575";
                                }
                                description "Value for the MPLS label";
                            }

                            ///nokia-conf/configure/router/segment-routing/sr-policies/static-policy/segment-list/segment/srv6-sid
                            leaf srv6-sid {
                                type types-sros:ipv6-address;
